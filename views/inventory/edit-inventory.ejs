    main{
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
  
    }
    input {
    width: 100%;
    margin: 5px;
    }
    #button {
      background-color: rgb(37, 150, 190);
      border: none;
      color: white;
      font-size: 15px;
      padding: 10px 20px;
      text-decoration: none;
      margin: 4px 2px;
      cursor: pointer;
    }
    form {
      grid-column: 2/2;
    }
    p {
      grid-row: 2/2;
      grid-column: 2/2;
    }
  </style> 