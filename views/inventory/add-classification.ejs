<!-- Task 2 Unit 4 -->
<form id="newClassification" action="/inv/add-classification" method="post">
    <p>Feild is required.</p>
    <fieldset>
      <div class="form">
          <label for="classification_name">Classification Name</label>
          <p>NAME MUST BE ALPHABETICAL CHARACTERS ONLY</p>
          <!-- The form must contain a direction that the new classification name cannot contain a space or special character of any kind. -->
          <input type="name" name="classification_name" required 
            pattern="^[a-zA-Z]+$"/>
        </div>
        <button id="button" type="submit">Add Classification</button>
      </fieldset>
    </form>

